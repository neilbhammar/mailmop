# Supabase
NEXT_PUBLIC_SUPABASE_URL="your_supabase_url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_service_role_key"

# Google OAuth (for local development)
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

# Local URLs
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Stripe integration (optional, not necessary for self-hosting)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
STRIPE_SECRET_KEY="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
STRIPE_PRICE_ID="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
STRIPE_WEBHOOK_SECRET="ABCDEFGHIJKLMNOPQRSTUVWXYZ"

# Resend (optional, enables email notifications)
RESEND_API_KEY="ABCDEFGHIJKLMNOPQRSTUVWXYZ"

# For exposing the Google Client to a hosted URL
NEXT_PUBLIC_GOOGLE_CLIENT_ID="ABCDEFGHIJKLMNOPQRSTUVWXYZ"

# Umami Analytics (optional - for integrity checking)
# Leave empty to disable integrity checking (recommended for simplicity)
NEXT_PUBLIC_UMAMI_INTEGRITY=""

# Crisp.im Chat Support (optional - enables user verification)
# Get the Website ID from your Crisp dashboard (appears in the URL when you're in your workspace)
NEXT_PUBLIC_CRISP_WEBSITE_ID="your_crisp_website_id"
# Get this from your Crisp dashboard under Settings > Advanced configuration > Identity Verification
CRISP_SECRET_KEY="your_crisp_secret_key"
